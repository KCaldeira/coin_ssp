{
  "run_metadata": {
    "json_id": "parameter-sensitivity",
    "run_name": "CanESM5_scale-linear-impacts-test",
    "description": "Run each parameter one at a time to see scaling that gives a 10% uniform loss of gdp in the target period.",
    "created_date": "2025-09-21"
  },

  "_comment_processing_order": "Configuration sections organized by processing step order in main.py",

  "climate_model": {
    "_processing_step": "Data Loading (All Steps)",
    "model_name": "CanESM5",
    "input_directory": "data/input",
    "file_prefixes": {
      "tas_file_prefix": "CLIMATE",
      "pr_file_prefix": "CLIMATE",
      "gdp_file_prefix": "GDP",
      "pop_file_prefix": "POP",
      "target_responses_file_prefix": "target_gdp_amounts"
    },
    "variable_names": {
      "tas_var_name": "tas",
      "pr_var_name": "pr",
      "gdp_var_name": "gdp_density",
      "pop_var_name": "pop_density"
    },
    "description": "File patterns: {prefix}_{model_name}_historical.nc + {prefix}_{model_name}_{ssp}.nc for tas/pr/pop; {prefix}_{model_name}_{short_ssp}.nc for gdp"
  },

  "ssp_scenarios": {
    "_processing_step": "Data Loading & Step Selection",
    "reference_ssp": "ssp245",
    "forward_simulation_ssps": [],
    "description": "Reference SSP used for scaling factor calibration, forward simulation SSPs for TFP and projections"
  },

  "time_periods": {
    "_processing_step": "Step 1 - Target GDP Changes",
    "reference_period": {
      "start_year": 1861,
      "end_year": 1910,
      "description": "Zero-climate change reference period for calculation of tas0 and pr0"
    },
    "historical_period": {
      "start_year": 1861,
      "end_year": 2014,
      "description": "Historical period for gdp-weighting in variability relationship calibration"
    },
    "target_period": {
      "start_year": 2080,
      "end_year": 2100,
      "description": "Target period for constraint satisfaction and impact assessment"
    },
    "prediction_period": {
      "start_year": 2015,
      "end_year": 2100,
      "description": "Year before which population and GDP is assumed to grow exponentially"
    }
  },

  "gdp_targets": [
      {
        "target_name": "const_10%",
        "target_shape": "constant",
        "target_type": "damage",
        "global_mean_amount": -0.10,
        "description": "Uniform 10% GDP reduction across all grid cells"
      }
  ],

  "model_params": {
    "_processing_step": "Step 2 - Baseline TFP & Step 3 - Scaling Factors",
    "_description": "Core economic model parameters (Solow-Swan growth model)",
    "s": 0.3,
    "alpha": 0.3,
    "delta": 0.1,
    "tas0": 0.0,
    "pr0": 0.0,
    "k_tas1": 0.0,
    "k_tas2": 0.0,
    "k_pr1": 0.0,
    "k_pr2": 0.0,
    "tfp_tas1": 0.0,
    "tfp_tas2": 0.0,
    "tfp_pr1": 0.0,
    "tfp_pr2": 0.0,
    "y_tas1": 0.0,
    "y_tas2": 0.0,
    "y_pr1": 0.0,
    "y_pr2": 0.0
  },

  "response_function_scalings": [
      {
        "scaling_name": "output_linear",
        "description": "Linear temperature sensitivity for output",
        "y_tas1": 1.0
      },
      {
        "scaling_name": "capital_linear",
        "description": "Linear temperature sensitivity for capital stock",
        "k_tas1": 1.0
      },
    {
        "scaling_name": "tfp_linear",
        "description": "Linear temperature sensitivity for TFP",
        "tfp_tas1": 1.0
      },
      
      {
        "scaling_name": "output_quadratic",
        "description": "Linear temperature sensitivity for output",
        "y_tas2": 1.0
      },
      {
        "scaling_name": "capital_quadratic",
        "description": "Linear temperature sensitivity for capital stock",
        "k_tas2": 1.0
      },
    {
        "scaling_name": "tfp_quadratic",
        "description": "Linear temperature sensitivity for TFP",
        "tfp_tas2": 2.0
      }
  ],

  "processing_options": {
    "_processing_step": "All Steps - Processing Control",
    "grid_cell_processing": {
      "enabled": true,
      "parallel_processing": true,
      "chunk_size": 1000
    },
    "output_formats": {
      "netcdf": true,
      "csv": false,
      "pdf_maps": true,
      "pdf_line_plots": true
    },
    "validation": {
      "constraint_verification": true,
      "economic_bounds_check": true,
      "temperature_damage_relationship": true
    }
  },

  "output_configuration": {
    "_processing_step": "Step 5 - Output Generation",
    "output_directory": "data/output",
    "filename_patterns": {
      "target_responses": "{model_name}_{reference_ssp}_target_responses_{timestamp}.nc",
      "forward_results": "{model_name}_{ssp}_{scaling_name}_results_{timestamp}.nc",
      "maps": "{model_name}_{reference_ssp}_maps_{timestamp}.pdf",
      "diagnostics": "{model_name}_{reference_ssp}_diagnostics_{timestamp}.pdf"
    },
    "include_timestamp": true
  }
}